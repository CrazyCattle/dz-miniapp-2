.resume-list {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.resume-list  .list-content{
  /* height: calc(100% - 140rpx); */
  height: 100%;
}
.resume-item {
  height: 180rpx;
  margin-bottom: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-left: 12rpx solid transparent;
  border-radius: 4rpx;
}
.resume-item input {
  opacity: 0;
  position: absolute;
  left: 0;
  top:0;
  z-index: -1;
}
.srcoll-box {
  padding: 20rpx 16rpx 5rpx;
}
.resume-item.active {
  border-left-color: #618FEB;
}
.resume-item .item-lf {
  flex: 1; 
  display: flex;
  max-width: 500rpx; 
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
}
.resume-item .item-lf .title {
  box-sizing: border-box;
  width: 100%;
  padding-right: 25rpx;
  font-size: 30rpx;
  color: #313148;
}
.resume-item .item-lf .desc {
  font-size: 26rpx;
  color: #848ca1;
}
.resume-item .item-rt {
  /* width: 196rpx; */
  height: 100%;
  display: flex;
  align-items: center;
}

.resume-item .item-rt .circle {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #C9C9C9;
  border-radius: 50%;
}
.resume-item .item-rt .circle .img {
  display: block;
  width: 100%;
  height: 100%;
}
.resume-item .item-rt .circle.active {
  border: none;
}

.editBtn {
  width: 88rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 22rpx;
}
.editBtn:first-child {
  margin-right: 20rpx;
  background: #b7bcce;
}
.editBtn:last-child {
  padding: 0;
  background: #618FEB;
}

.resume-list .tit {
  height: 100rpx;
  margin-bottom: 40rpx;
  line-height: 100rpx;
  text-align: center;
  font-family:PingFangSC-Semibold;
  font-size: 28rpx;
  color: #313148;
  background-color: #fff;
  border-top: 1rpx solid #eaecf3
}


.resume-tips {
  padding-top: 150rpx;
}
.resume-tips .tip-icon {
  display: block;
  width: 202rpx;
  height: 262rpx;
  margin: 0 auto 28rpx;
}
.resume-tips .tip {
  font-size: 28rpx;
  color: #9da3b4;
  text-align: center;
  margin-top: 42rpx
}
.resume-tips .tipfooter {
  margin-top: 88rpx;
  font-size: 28rpx;
  color: #9da3b4;
  text-align: center;
}
.resume-tips .tipfooter text{
  color: #618FEB;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.subFixedBtn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 0;
  background-color: #618FEB;
}


