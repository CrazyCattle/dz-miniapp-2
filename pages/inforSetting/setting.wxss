.page-setting {
  padding-top: 30rpx;
}

.switch-box {
  display: flex;
  height: 88rpx;
  padding: 0 28rpx 0 40rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #313148;
}

.arrow-icon {
  width: 0;
  height: 0;
  margin-left: 10rpx;
  border: 10rpx solid transparent;
  border-top-color: #b7bcce;
  transition: transform 0.3s linear;
  transform-origin: 50% 25%;
  position: relative;
  right: 20rpx;
  top: 6rpx;
}

.arrow-icon .inner {
  position: absolute;
  width: 0;
  height: 0;
  border: 8rpx solid transparent;
  border-top-color: #fff;
  top: -9rpx;
  left: 50%;
  transform: translate(-50%, 0);
}

.filter {
  padding-left: 40rpx;
}

.c-g {
  width: 100%;
  display: flex;
  border-top: 1rpx solid #e6e9f3;
}

.filter .checkbox {
  flex: 1;
  height: 104rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #313148;
  position: relative;
}

.type-selection {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  border-radius: 50%;
  border: 1rpx solid #c9c9c9;
}

.type-selection.active {
  border-color: #618FEB;
}
.type-selection .s-img {
  width: 100%;
  height: 100%;
}

.type-step {
  width: 32rpx;
  height: 32rpx;
  padding: 4rpx;
  margin-right: 16rpx;
  box-sizing: border-box;
  border-radius: 50%;
  background-clip: content-box;
  border: 1rpx solid #c9c9c9;
}

.type-step.active {
  border-color: #618FEB;
  background-color: #618FEB;
}

