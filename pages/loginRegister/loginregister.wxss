.login-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.login-box .bg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.login-box .login-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.6);
  padding-top: 180rpx;
  box-sizing: border-box;
}

.logo, .logo-img {
  width: 350rpx;
  height: 120rpx;
  margin: 0 auto 180rpx;
}

.register {
  font-size: 26rpx;
  color: #618FEB;
}

.tip {
  width: 470rpx;
  margin: 260rpx auto 0;
  font-size: 22rpx;
  color: #848ca1;
  position: relative;
}
.tip::before,
.tip::after {
  content: '';
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  height: 0;
  width: 138rpx;
  border-top: 1rpx solid #d6dae4;
}
.tip::before {
  left: -10rpx;
}
.tip::after {
  right: -10rpx;
}