.resume-box {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
}
.scrollBox {
  height: calc(100% - 100rpx);
}
.resume-box .list {
  padding: 20rpx 15rpx;
}
.resume-box .list .item {
  display: flex;
  box-sizing: border-box;
  padding: 32rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius:4rpx;
  background-color: #fff;
}
.resume-box .list .item:last-child {
  margin-bottom: 0;
}
.resume-box .list .img {
  width: 116rpx;
  height: 116rpx;
  margin-right: 22rpx;
}
.resume-box .list .conts {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.conts__top,
.conts__bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.conts__top .tit {
  max-width: 335rpx;
  font-size: 28rpx;
  color: #313148;
  font-weight: bold;
  font-family:'PingFangSC-Semibold';
}
.conts__top .time {
  font-size: 22rpx;
  color: #848CA1;
}

.conts__bottom .company {
  font-size: 26rpx;
  color: #848CA1;
}
.conts__bottom .status {
  margin-right: -8rpx;
  font-size: 24rpx;
  color: #618FEB;
}
.conts__bottom .status-1 {
  font-size: 24rpx;
  color: #618FEB;
}
.conts__bottom .status-2 {
  color: #F6B65F;
}
.conts__bottom .status-3 {
  color: #00B28A;
}
.conts__bottom .status-4 {
  color: #848CA1;
}

/* new */
.resume-status-tab {
  display: flex;
  align-items: center;
  
  background-color: #fff;
  border: 1rpx solid #E6E9F3;
  border-left: none;
  border-right: none;
}
.resume-status-tab .tab-item {
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  font-size: 26rpx;
  color: #313148;
  position: relative;
}
.resume-status-tab .tab-item::after {
  content: '';
  position: absolute;
  height: 32rpx;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  background-color: #E6E9F3;
}
.resume-status-tab .tab-item:last-child::after {
  width: 0;
}
.resume-status-tab .tab-item::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: transparent;
}
.resume-status-tab .tab-item.active {
  color: #618FEB;
}
.resume-status-tab .tab-item.active::before {
  background-color: #618FEB;
}