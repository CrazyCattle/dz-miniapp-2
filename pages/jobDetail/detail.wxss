.jobDetail {
  padding-bottom: 158rpx;
}
.recommend > .tc {
  padding-top: 35rpx;
}
.recommend .title {
  display: inline-block;
  margin-bottom: 10rpx;
  color:#313148;
  letter-spacing:0;
  font-family: 'PingFangSC-Semibold';
  font-weight: bold;
  font-size: 26rpx;
  position: relative;
}
.recommend .title::before,
.recommend .title::after {
  content: '';
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height:2rpx;
  background-color: #e6e9f3;
}
.recommend .title::before { left: -40rpx; }
.recommend .title::after { right: -40rpx; }
.r-list-item {
  display: flex;
  align-items: center;
}
.r-list-item .cont {
  flex: 1;
  height: 140rpx;
  padding: 32rpx 50rpx 32rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1rpx solid #eaecf3;
}
.r-list-item:last-child .cont {
  border-bottom: none;
}
.r-list-item .pic {
  width: 140rpx;
  height: 140rpx;
  margin: 0 35rpx;
  border: 1rpx solid #e6e9f3;
  border-radius: 1rpx;
  box-sizing: border-box;
}
.r-list-item .cont .job {
  font-family: 'PingFangSC-Semibold';
  font-weight: bold;
  font-size: 30rpx;
  line-height: 40rpx;
  color:#313148;
}
.r-list-item .cont .company {
  width: 490rpx;
  font-size: 26rpx;
  color:#848ca1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.r-list-item .cont .s-desc {
  display: flex;
  justify-content: space-between;
}
.r-list-item .cont .infor {
  font-size: 22rpx;
  color: #848ca1;
}

.jobDetail-title {
  border-top: 1rpx solid #eaecf3;
}
.jobDetail-title:first-child {
  padding: 0 35rpx;
}
.jobDetail-title .salary {
  color:red;
}


.inner-row {
  padding: 40rpx 40rpx 30rpx;
}
.inner-row:first-child {
  border-bottom: 1rpx solid #eaecf3;
}
.inner-row:last-child {
  border-bottom: none;
}
.inner-row .tit {
  padding-bottom: 20rpx;
  font-family: 'PingFangSC-Semibold';
  font-weight: bold;
  font-size: 26rpx;
  color:#313148;
}
.inner-row .job-desc {
  font-size: 24rpx;
  color: #848ca1;
  letter-spacing: 0.04rpx;
  line-height: 50rpx;
}
.inner-row .location {
  display: flex;
  align-items: center;
}
.inner-row .job-desc .icon {
  width: 20rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
.inner-row .map {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #618FEB;
  text-align: right;
}
.linkMap {
  display: inline-block;
}

.more {
  display: flex;
  height: 92rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:#618FEB;
  letter-spacing: 0;
}
.arrow-icon {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 5rpx;
  position: relative;
  border: 10rpx solid transparent;
  border-left-color: #618FEB;
}
.arrow-icon .inner {
  position: absolute;
  width: 0;
  height: 0;
  left: -9rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 8rpx solid transparent;
  border-left-color: #fff;
}

.address-icon {
  display: inline-block;
}

.tab-fun--bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 98rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tab-fun--bottom .tab-lf,
.tab-fun--bottom .tab-rt {
  flex: 1;
}
.tab-fun--bottom .tab-lf {
  display: flex;
}
.tab-fun--bottom .tab-lf .fun-btn {
  flex: 1;
  font-size: 20rpx;
  color:#b7bcce;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  line-height: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.tab-fun--bottom .tab-lf .fun-btn.active {
  color: #618FEB;
}
.tab-fun--bottom .tab-lf .fun-btn:first-child {
  padding-left: 50rpx;
  /* align-items: flex-end; */
}
.tab-fun--bottom .tab-lf .fun-btn:last-child {
  padding-right: 50rpx;
  /* align-items: flex-start; */
}
.tab-fun--bottom .tab-lf .fun-btn .img {
  width: 34rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}
.tab-fun--bottom .tab-lf .fun-btn:last-child .img {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 10rpx;
}
.tab-fun--bottom .send-resume {
  font-family: 'PingFangSC-Medium';
  font-size: 30rpx;
  color: #fff;
  line-height: 98rpx;
  text-align: center;
  background-color: #618FEB;
}

.jobDetailTitle {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}