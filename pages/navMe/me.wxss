.me-head-infor {
  display: flex;
  height: 240rpx;
  padding: 0 36rpx;
  align-items: center;
  border: 1rpx solid #e6e9f3;
  border-left: none;
  border-right: none;
  position: relative;
}
.me-head-infor button.headImg {
  width: 150rpx;
  height: 150rpx;
  margin: 0 26rpx 0 0;
  padding: 0;
  background-color: transparent;
}
.me-head-infor .me-pic {
  width: 150rpx;
  height: 150rpx;
  margin-right: 26rpx;
  border-radius: 50%;
}
.me-head-infor .me-name {
  /* font-size: 30rpx;
  color: #313148; */
  margin: 0;
  padding: 0;
  font-size: 30rpx;
  color: #313148;
  background-color: transparent;
}
.me-head-infor .me-educ {
  font-size: 24rpx;
  color: #848ca1;
}
.editUser {
  position: absolute;
  right: 30rpx;
  top: 80rpx;
  padding: 0 15rpx;
  line-height: 42rpx;
  font-size: 22rpx;
  color: #848CA1;
  background-color: #F3F4F8;
  border-radius: 2rpx;
}

.me-send-box {
  display: flex;
  height: 80rpx;
  font-size: 26rpx;
  color: #313148;
}
.me-send-box .me-send,
.me-send-box .me-review {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.me-send-box .me-send::after {
  content: '';
  position: absolute;
  top: 50%;
  right: 0;
  width: 0;
  height: 38rpx;
  transform: translateY(-50%);
  border-right: 1rpx solid #e6e9f3;
}
.me-send-box .num {
  font-size: 26rpx;
  color: #618FEB;
}

.me-setting {
  margin-top: 25rpx;
  padding-left: 40rpx;
}
.me-row {
  display: flex;
  height: 88rpx;
  padding-right: 60rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e9f3;
  font-size: 26rpx;
  color: #313148;
  position: relative;
}
.me-row:last-child {
  border-bottom: none;
}
.me-row .me-row__box {
  display: flex;
  align-items: center;
}
.me-row .row-tips {
  height: 36rpx;
  padding: 0 16rpx;
  border-radius: 30rpx;
  line-height: 36rpx;
  color: #fff;
  font-size: 20rpx;
}
.me-row .row-tips.primary {
  background-color: #618FEB;
}
.me-row .row-tips.warning {
  background-color: #FF5C5C;
}

.me-row .icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 26rpx;
}
.me-row .img {
  display: block;
}
.me-row .course {
  width: 32rpx;
  height: 30rpx;
}
.me-row .resume {
  width: 32rpx;
  height: 32rpx;
}
.me-row .expect {
  width: 37rpx;
  height: 38rpx;
}
.me-row .collect {
  width: 32rpx;
  height: 32rpx;
}
.me-row .pwd {
  width: 32rpx;
  height: 38rpx;
}
.me-row .infor {
  width: 32rpx;
  height: 29rpx;
}
.me-row .out {
  width: 32rpx;
  height: 28rpx;
}
.me-row .invi {
  width: 32rpx;
  height: 29rpx;
}
.arrow-icon {
  position: absolute;
  right: 28rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  margin-left: 5rpx;
  border: 10rpx solid transparent;
  border-left-color: #b7bcce;
}
.arrow-icon .inner {
  position: absolute;
  width: 0;
  height: 0;
  left: -10rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 8rpx solid transparent;
  border-left-color: #fff;
}