.notice-box {
  border-top: 1rpx solid #e6e9f3;
}
.notice-box .notice {
  padding-top: 30rpx;
  font-size: 26rpx;
  color: #313148;
}
.notice-box .connect-img {
  width: 232rpx;
  height: 60rpx;
  margin-top: 32rpx;
  padding-bottom: 28rpx;
}

.form-box {
  padding-left: 40rpx 
}

.form-box .row {
  display: flex;
  border-bottom: 1rpx solid #f3f4f8;
}

.form-box .row .row-tit {
  display: flex;
  width: 120rpx;
  align-items: center;
  font-size: 26rpx;
  color: #313148;
}

.form-box .row .rot-ipt {
  box-sizing: border-box;
  flex: 1;
  height: 98rpx;
  padding: 15rpx 15rpx 15rpx 0;
}
.form-box .row .input {
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  color:#848ca1;
  font-family: 'PingFangSC-Regular';
}
.input:focus {
  border: none;
}

.link-register {
  font-size: 26rpx;
  color:#828ca3;
}
.register {
  color: #618FEB;
}
