.list-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.type-list {
  padding: 32rpx 40rpx 0;
  margin-top: 20rpx;
}
.type-list:first-child {
  margin-top: 0;
}
.type-list .title {
  padding-left: 20rpx;
  margin-bottom: 20rpx;
  color: #313148;
  font-size: 28rpx;
  position: relative;
}
.type-list .title::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  width: 6rpx;
  height: 30rpx;
  transform: translateY(-50%);
  background-color: #618FEB;
}
.type-list .row {
  display: flex;
  flex-wrap: wrap;
  /* margin-top: -24rpx; */
}
.type-list .row .item {
  width: 320rpx;
  margin: 0 30rpx 24rpx 0;
  border-radius: 5rpx;
  box-shadow: 0 3rpx 6rpx rgba(0,0,0,.16);
}
.type-list .row .item:nth-child(2n) {
  margin-right: 0;
}
.type-list .row .logo {
  display: block;
  width: 100%;
  height: 220rpx;
}
.type-list .row .txt {
  width: 290rpx;
  height: 80rpx;
  padding-left: 18rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #313148;
}