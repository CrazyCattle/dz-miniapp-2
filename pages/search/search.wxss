.searchBox {
  display: flex;
  height: 90rpx;
  padding-right: 26rpx;
  align-items: center;
  box-sizing: border-box;
  background-color: #F3F4F8;
  z-index:5;
}
.searchBox .city {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #313148;
  font-size: 26rpx;
}
.searchBox .city .drop-icon {
  width: 20rpx;
  height: 20rpx;
}
.searchBox .city .drop-icon .img {
  display: block;
  width: 100%;
  height: 100%;
  margin-left: 5rpx;
}
.searchBox .search-ipt {
  width: 576rpx;
  background-color: #fff;
  border-radius: 28rpx;
  position: relative;
}
.searchBox .search-ipt .search-tips {
  height: 56rpx;
  padding-left: 60rpx;
  line-height: 56rpx;
  color: #848CA1;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  flex: 1;
}
.searchBox .search-ipt .search-tips .ipt {
  height: 46rpx;
}
.searchBox .search-ipt .search-icon {
  position: absolute;
  top: 50%;
  left: 28rpx;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
}
.searchBox .search-ipt .search-icon .img {
  display: block;
  width: 100%;
  height: 100%;
}

.search-conts {
  padding: 30rpx 45rpx 0 32rpx;
}
.search-conts .s-c-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #313148;
}
.search-conts .s-c-title .delect-icon {
  width: 24rpx;
  height: 24rpx;
}
.search-conts .s-c-title .delect-icon .icon {
  display: block;
  width: 100%;
  height: 100%;
}

.item-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: -3rpx;
}
.item-list .item {
  padding: 12rpx 32rpx;
  margin: 24rpx 16rpx 0 0;
  font-size: 24rpx;
  line-height: 26rpx;
  color: #848CA1;
  border-radius: 25rpx;
  background-color: #fff;
}


.city-filter-box {
  position: absolute;
  top: 90rpx;
  right: 0;
  transform: scaleY(0);
  transition: transform .2s ease-in-out;
  box-shadow: 0 2rpx 2rpx 2rpx rgba(0,0,0,.1);
  transform-origin: 50% 0;
}
.city-filter-box {
  background-color: #f8f8fa;
}
.city-filter-box.active,
.educ-filter-box.active {
  transform: scaleY(1);
}
.educ-filter-box {
  width: 100%;
  max-height: 375rpx;
  overflow: hidden;
}
.city-filter-box {
  width: 750rpx;
  height: 750rpx;
  display: flex;
}
.city-filter-box .prov {
  flex: 3;
  border-right: 1rpx solid #e6e9f3;
}
.city-filter-box .city {
  flex: 4;
}
.type-filter-item,
.prov .prov-item,
.city .city-item,
.educ-filter-box .educ-filter-item {
  box-sizing: border-box;
  height: 75rpx;
  padding-left: 34rpx;
  line-height: 75rpx;
  font-size: 24rpx;
  color: #848ca1;
  border-bottom: 1rpx solid #e6e9f3;
}
.type-filter-item:last-child,
.prov .prov-item:last-child,
.city .city-item:last-child,
.educ-filter-box .educ-filter-item:last-child {
  border-bottom: none;
}