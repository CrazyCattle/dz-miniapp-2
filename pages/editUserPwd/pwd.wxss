.form-box {
  padding-left: 40rpx 
}

.form-box .row {
  display: flex;
  border-bottom: 1rpx solid #f3f4f8;
}

.form-box .row .row-tit {
  display: flex;
  width: 135rpx;
  align-items: center;
  font-size: 26rpx;
  color: #313148;
}

.form-box .row .rot-ipt {
  box-sizing: border-box;
  flex: 1;
  height: 98rpx;
  padding: 15rpx 15rpx 15rpx 0;
  position: relative;
}
.form-box .row .input {
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  color:#848ca1;
  font-family: 'PingFangSC-Regular';
}
.input:focus {
  border: none;
}

.link-register {
  font-size: 26rpx;
  color:#828ca3;
}
.register {
  color: #51d3d9;
}

.getCode-ipt {
  padding-right: 200rpx;
  box-sizing: border-box;
}
button.getCode {
  position: absolute;
  right: 20rpx;
  top: 50%;
  height: 60rpx;
  transform: translateY(-50%);
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #618FEB;
  font-size: 24rpx;
  color: #fff;
  z-index: 1;
}
button[disabled][type=default] {
  color: #fff;
  background:#618FEB;
}

.repwd-success {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  text-align: center;
  border-top: 1rpx solid #f3f4f8;
}
.repwd-success .form-box {
  padding-top: 100rpx;
  padding-left: 0;
}
.repwd-success .success-icon {
  display: block;
  width: 84rpx;
  height: 84rpx;
  margin: 0 auto 38rpx;
}
.repwd-success .success-tip {
  font-size: 26rpx;
  color: #848ca1;
}