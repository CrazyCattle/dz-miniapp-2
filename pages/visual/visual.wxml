<view class="view bg">
  <view class="search-box bg-f">
    <view class="search-input" wx:if="{{ !focus }}" bindtap="iptFocus">
      <image class="search" src="../../images/search.png"></image>{{ placeholderTxt}}
    </view>
    <view class="search-input bg-f" wx:if="{{ focus }}">
      <input class="ipt" type="text" confirm-type="search" focus='{{ focus }}' bindblur="cc" bindconfirm="iptConfirm" bindinput="searchChange" catchtap='iptFocus'></input>
    </view>
  </view>
  <view class="type-banner">
    <swiper class="scroll-swiper" indicator-dots="{{ indicatorDots }}" autoplay="{{ canautoplay }}" duration="160" display-multiple-items="1" previous-margin="75rpx" next-margin="75rpx" skip-hidden-item-layout="true" current="0" bindchange="swiperChange">
      <block wx:for="{{imgUrls}}" wx:index="index" wx:key="key">
        <swiper-item class="swiper-item">
          <image src="{{ item }}" class="slide-image {{swiperIndex == index ? 'active' : ''}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">  
      <block wx:for="{{imgUrls}}" wx:key="key">  
        <view class="dot {{index == swiperIndex ? ' active' : ''}}"></view>  
      </block>  
    </view>
  </view>
  <view class="type-content mt20">
    <view class="type-list" wx:for="{{ list }}" wx:key="key">
      <view class="title">{{ item.class_name }}</view>
      <view class="row">
        <view class="item" wx:for="{{ item.twolist }}" wx:for-item="cItem" wx:key="key" data-id="{{ cItem.class_id }}" bindtap='linkToChild'>
          <image class="logo" src='{{ cItem.class_img }}'></image>
          <view class="txt ellipsis">{{ cItem.class_name }}</view>
        </view>
      </view>
      <view class="more" bindtap='linkToMore' data-id="{{ item.class_id }}">
        查看更多
        <view class="arrow-icon">
          <view class="inner"></view>
        </view> 
      </view>
    </view>
  </view>
</view>