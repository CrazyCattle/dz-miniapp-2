.search-box {
  padding: 14rpx 20rpx 0;
}
.search-box .search-input {
  width: 100%;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #848ca1;
  letter-spacing: 0.26rpx;
  background-color: #F8F8F8;
  border-radius: 28rpx;
  position: relative;
}
.search-box .search-input .ipt {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  /* opacity: 0; */
  z-index: 1;
}

.search-box .search {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.type-list {
  padding: 32rpx 39rpx 0;
  margin-top: 20rpx;
  background-color: #fff;
}
.type-list:first-child {
  margin-top: 0;
}
.type-list .title {
  padding-left: 20rpx;
  margin-bottom: 20rpx;
  color: #313148;
  font-size: 28rpx;
  position: relative;
}
.type-list .title::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  width: 6rpx;
  height: 30rpx;
  transform: translateY(-50%);
  background-color: #618FEB;
}
.type-list .row {
  display: flex;
  flex-wrap: wrap;
  /* margin-top: -24rpx; */
}
.type-list .row .item {
  width: 320rpx;
  margin: 0 32rpx 24rpx 0;
  border-radius: 5rpx;
  box-shadow: 0 3rpx 6rpx rgba(0,0,0,.16);
}
.type-list .row .item:nth-child(2n) {
  margin-right: 0;
}
.type-list .row .logo {
  width: 100%;
  height: 220rpx;
}
.type-list .row .txt {
  width: 290rpx;
  height: 80rpx;
  padding-left: 18rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #313148;
}

.more {
  display: flex;
  height: 92rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:#618FEB;
  letter-spacing: 0;
}
.arrow-icon {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 8rpx;
  position: relative;
  border: 10rpx solid transparent;
  border-left-color: #618FEB;
}
.arrow-icon .inner {
  position: absolute;
  width: 0;
  height: 0;
  left: -9rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 8rpx solid transparent;
  border-left-color: #fff;
}

.type-banner {
  padding: 51rpx 0 78rpx;
  background-color: #fff;
  position: relative;
}
.type-banner .scroll-swiper {
  height: 339rpx;
  width: 100%;
}
.type-banner .swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
  border-radius: 9rpx;
}
.type-banner .slide-image{
  height:320rpx;
  width: 535rpx;
  border-radius: 9rpx;
  margin: 0 30rpx;
  z-index: 1;
  position: relative;
}
.type-banner .slide-image.active {
  transform: scale(1.15);
  transition:all .1s linear;
  z-index: 20;
}

.dots {
  display: flex;
  position: absolute;
  left: 50%;
  bottom: 25rpx;
  transform: translateX(-50%);
}  
.dots .dot{  
  width: 12rpx;
  height: 12rpx;   
  border-radius: 50%;
  margin-right: 15rpx;
  background-color: #618FEB;
  opacity: .14;
}
.dots .dot.active{  
  opacity: 1;
}