/* components/loading/loading.wxss */
.loading {
  height: 92rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:#618FEB;
}
.loading-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.loading .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.loading .img {
  display: block;
  animation: rotate 1.8s linear infinite;
}
@keyframes rotate {
  0% { 
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}