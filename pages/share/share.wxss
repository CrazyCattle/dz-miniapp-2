.share {
  box-sizing: border-box;
  min-height: 100%;
  padding: 240rpx 0 34rpx;
  background: linear-gradient(to bottom,#4077F0 0%,#3946DA 100%);
  position: relative;
}

.share-bg {
  width: 750rpx;
  height: 829rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.share-tit {
  width: 457rpx;
  height: 205rpx;
  position: absolute;
  top: 55rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1;
}
.share-bg .img,
.share-tit .img {
  display: block;
  width: 100%;
  height: 100%;
}

.share-course {
  width: 555rpx;
  height: 315rpx;
  margin: 0 auto 230rpx;
  background-color: #fff;
  border-radius: 10rpx;
  position: relative;
  z-index: 2;
}
.share-course .img {
  display: block;
  width: 100%;
  height: 245rpx;
  border-radius: 10rpx 10rpx 0 0;
}
.share-course .txt {
  box-sizing: border-box;
  padding: 0 20rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #494C4E;
}

.supporter,
.share-box {
  box-sizing: border-box;
  width: 702rpx;
  margin: auto;
  padding: 0 50rpx;
  border-radius: 10rpx;
  background-color: #fff;
  position: relative;
  z-index: 2;
}

.share-box {
  padding-bottom: 34rpx;
}
.share-box .share-tips {
  padding: 73rpx 0 0;
  font-size: 30rpx;
  color: #313148;
}
.share-box .support-txt {
  padding: 110rpx 0 45rpx;
  font-size: 30rpx;
  color: #313148;
  text-align: center;
}
.share-box .btn {
  width: 431rpx;
  height: 83rpx;
  padding: 0;
  background-color: transparent;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -50%);
}
.share-box .btn .img {
  display: block;
  width: 100%;
  height: 100%;
}
.share-box .reshare {
  display: flex;
  margin: 46rpx 0 26rpx;
  justify-content: space-between; 
}
.share-box .reshare .sBtn,
.share-box .reshare .lBtn {
  width: 272rpx;
  height: 72rpx;
  margin: 0;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  background-color: #FF6846;
}

.supporter {
  margin-top: 20rpx;
}
.supporter .title {
  padding: 38rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #313148;
}
.supporter .title .nums {
  padding: 0 10rpx;
  color: #FF6846;
}
.supporter .list {
  display: flex;
  flex-wrap: wrap;
}
.supporter .item {
  display: flex;
  width: 25%;
  margin-bottom: 21rpx;
  flex-direction: column;
  align-items: center;
}
.supporter .item .img {
  width: 82rpx;
  height: 82rpx;
  margin-bottom: 13rpx;
  border-radius: 41rpx;
}
.supporter .item .name {
  font-size: 24rpx;
  color: #848CA1;
}

.supporter .list-1 {
  justify-content: center;
}