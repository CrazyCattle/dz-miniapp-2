.more {
  display: flex;
  height: 92rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:#618FEB;
  letter-spacing: 0;
}
.arrow-icon {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 5rpx;
  position: relative;
  border: 10rpx solid transparent;
  border-left-color: #618FEB;
}
.arrow-icon .inner {
  position: absolute;
  width: 0;
  height: 0;
  left: -9rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 8rpx solid transparent;
  border-left-color: #fff;
}

.extend-all .arrow-icon {
  position: relative;
  top: 6rpx;
  border-top-color: #618FEB;
  border-left-color: transparent;
  transition: transform .3s linear;
}
.extend-all.active .arrow-icon {
  top: -6rpx;
  transform: rotate(180deg);
}
.extend-all .arrow-icon .inner {
  border-top-color: #fff;
  border-left-color: transparent;
  top: -9rpx;
  left: 50%;
  transform: translate(-50%, 0);
}
.extend-all {
  position: relative;
}
.extend-all .txt-mask {
  position: absolute;
  width: 100%;
  height: 70rpx;
  top: -70rpx;
  left: 0;
  background-image: linear-gradient(rgba(255,255,255,.5),rgba(255,255,255,1))
}

.share-box {
  position: fixed;
  width: 100%;
  height: 360rpx;
  bottom: -1rpx;
  left: 0;
  transform: translateY(100%);
  z-index: 2000;
  box-sizing: border-box;
  transition: transform .2s ease-in-out;
}
.share-box.active {
  transform: translateY(0);
}
.share-box .row {
  display: flex;
  padding: 0 40rpx;
  margin-bottom: 0;
  align-items: center;
  height: 130rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #848ca1;
  position: relative;
}
.share-box .row-1::after {
  content: '';
  position: absolute;
  left: 40rpx;
  bottom: 0;
  width: 670rpx;
  height: 0;
  border-bottom: 1rpx solid #e6e9f3;
  z-index: 2001;
}
.share-box .row .icon {
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background:#618FEB;
}
.share-box .row:nth-child(2) .icon {
  background:#ffa180;
}
.share-box .close {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-family: 'PingFangSC-Medium';
  font-size: 30rpx;
  color: #fff;
  background:#618FEB;
}