.me-head-infor {
  display: flex;
  height: 200rpx;
  padding: 0 40rpx;
  align-items: center;
  position: relative;
}
.me-head-infor .me-pic {
  width: 140rpx;
  height: 140rpx;
  margin-right: 26rpx;
  background-color: #e6e9f3;
  border-radius: 50%;
}
.me-head-infor .me-name {
  font-size: 30rpx;
  color: #313148;
}

.save-pic {
  position: absolute;
  width: 88rpx;
  height: 44rpx;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
  line-height: 44rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background: #618FEB;
  border-radius: 22rpx;
}


.form-box {
  padding-left: 40rpx 
}
.form-box .row {
  display: flex;
  border-bottom: 1rpx solid #f3f4f8;
}
.form-box .row .row-tit {
  display: flex;
  width: 145rpx;
  align-items: center;
  font-size: 26rpx;
  color: #313148;
}
.form-box .row .rot-ipt {
  box-sizing: border-box;
  flex: 1;
  height: 98rpx;
  padding: 15rpx 15rpx 15rpx 0;
  position: relative;
}
.form-box .row .input {
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  color:#848ca1;
  font-family: 'PingFangSC-Regular';
}
.input:focus {
  border: none;
}

.arrow-icon {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 10rpx;
  border: 10rpx solid transparent;
  border-left-color: #618FEB;
  position: relative;
}
.arrow-icon .inner {
  position: absolute;
  width: 0;
  height: 0;
  left: -9rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 8rpx solid transparent;
  border-left-color: #fff;
}

.select-exprect {
  position: absolute;
  right: 22rpx;
  top: 50%;
  transform: translateY(-50%);  
  height: 68rpx;
  font-size: 24rpx;
  color:#618FEB;
  display: flex;
  align-items: center;
  z-index: 10;
}
.picker {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 20;
  opacity: 0;
}