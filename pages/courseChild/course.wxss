@import "../../wxParse/wxParse.wxss";

.banner {
  height: 420rpx;
}
.banner .img {
  display: block;
  width: 100%;
  height: 100%;
}

.course-raiders {
  margin-top: -20rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.course-raiders-head {
  padding: 40rpx 0;
  font-family: 'PingFangSC-Medium';
  font-size: 30rpx;
  color: #494C4E;
}

.course-raiders-desc {
  padding: 0 42rpx 80rpx;
  font-size: 24rpx;
  color: #848CA1;
  letter-spacing: 0;
  line-height: 40rpx;
  position: relative;
}

.course-raiders-desc .wxParse {
  max-height: 200rpx;
  overflow: hidden;
}

.course-raiders-desc .wxParse.active {
  max-height: 100%;
}

.fliter-box {
  padding-top: 20rpx;
}

.fliter-box .title {
  display: inline-block;
  margin-bottom: 10rpx;
  color: #313148;
  letter-spacing: 0;
  font-family: 'PingFangSC-Semibold';
  font-weight: bold;
  font-size: 26rpx;
  position: relative;
}

.fliter-box .title::before, .fliter-box .title::after {
  content: '';
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 2rpx;
  background-color: #e6e9f3;
}

.fliter-box .title::before {
  left: -40rpx;
}

.fliter-box .title::after {
  right: -40rpx;
}

.fliter-box .tit {
  font-size: 24rpx;
  color: #848ca1;
}

.fliter-tab {
  display: flex;
  padding: 40rpx;
  flex-wrap: wrap;
}

.fliter-tab .item {
  width: 200rpx;
  height: 56rpx;
  margin: 40rpx 34rpx 0 0;
  line-height: 56rpx;
  font-size: 24rpx;
  color: #313148;
  border-radius: 28rpx;
  background: #f3f4f8;
}

.fliter-tab .item:nth-child(3n) {
  margin-right: 0;
}

.fliter-tab .item:nth-child(1), .fliter-tab .item:nth-child(2),
.fliter-tab .item:nth-child(3) {
  margin-top: 0;
}

.r-list-item {
  display: flex;
  align-items: center;
  position: relative;
}

.r-list-item:last-child {
  border-bottom: none;
  position: relative;
}

.r-list-item::after {
  content: '';
  position: absolute;
  width: 670rpx;
  height: 0;
  bottom: 0;
  left: 40rpx;
  border-bottom: 1rpx solid #eaecf3;
}

.r-list-item .cont {
  flex: 1;
  height: 160rpx;
  padding: 30rpx 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.r-list-item .pic {
  width: 220rpx;
  height: 160rpx;
  margin: 0 40rpx 0 30rpx;
  border-radius: 1rpx;
}

.r-list-item .cont .job {
  width: 420rpx;
  padding-left: 40rpx;
  font-family: 'PingFangSC-Semibold';
  font-weight: bold;
  font-size: 30rpx;
  color: #313148;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.r-list-item .cont .company {
  width: 420rpx;
  padding-left: 40rpx;
  font-size: 24rpx;
  color: #848ca1;
  letter-spacing: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: flex;
  align-items: center;
}

.r-list-item .cont .company .img {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}

.r-list-item .cont .s-desc {
  display: flex;
  width: 300rpx;
  padding-left: 40rpx;
  justify-content: space-between;
}

.r-list-item .cont .infor {
  font-size: 24rpx;
  color: #848ca1;
}

.more {
  display: flex;
  height: 92rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #618FEB;
  letter-spacing: 0;
}

.arrow-icon {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 5rpx;
  position: relative;
  border: 10rpx solid transparent;
  border-left-color: #618FEB;
}

.arrow-icon .inner {
  position: absolute;
  width: 0;
  height: 0;
  left: -9rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 10rpx solid transparent;
  border-left-color: #fff;
}

.arrow-icon-more {
  position: absolute;
  bottom: 30rpx;
  right: 50%;
  transform: translateX(50%);
  width: 0;
  height: 0;
  margin-top: 5rpx;
  border: 12rpx solid transparent;
  border-top-color: #618FEB;
  transform-origin: 25% 25%;
  transition: transform .2s linear;
}
.arrow-icon-more .inner {
  position: absolute;
  width: 0;
  height: 0;
  top: -11rpx;
  left: 50%;
  transform: translateX(-50%);
  border: 8rpx solid transparent;
  border-top-color: #fff;
}
.arrow-icon-more.active {
  transform: rotate(180deg) translateX(-50%);
}

.linkShare {
  width: 320rpx;
  height: 60rpx;
  margin: auto;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  color: #618FEB;
  font-size: 24rpx;
  border: 1px solid #618FEB;
}